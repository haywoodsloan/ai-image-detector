{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Scrape AI Images",
      "type": "npm",
      "script": "start",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape Real Images",
      "type": "npm",
      "script": "start -- --real",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape All",
      "dependsOrder": "sequence",
      "dependsOn": ["Scrape AI Images", "Scrape Real Images"],
      "problemMatcher": []
    },
    {
      "label": "Scrape Continuous",
      "type": "shell",
      "command": "while ($true) { npm --prefix scrapper start; npm  --prefix scrapper start -- --real; sleep 3600 }",
      "problemMatcher": []
    },
    {
      "label": "Rebuild Autotrain App",
      "type": "shell",
      "command": "docker compose up --build --force-recreate --detach app",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "presentation": {
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Attach to Autotrain App",
      "type": "shell",
      "command": "docker attach --no-stdin --sig-proxy=false autotrain-app",
      "problemMatcher": []
    },
    {
      "label": "Rebuild Autotrain App with Logs",
      "dependsOn": ["Rebuild Autotrain App", "Attach to Autotrain App"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Stop Autotrain",
      "type": "shell",
      "command": "docker compose stop",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Restart Autotrain App",
      "type": "shell",
      "command": "docker compose restart app",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App",
      "type": "shell",
      "command": "node ${workspaceFolder}/autotrain/launch.mjs",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain CLI",
      "type": "shell",
      "command": "docker compose up --build --force-recreate --detach cli && docker compose attach cli",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App with Logs",
      "dependsOn": ["Attach to Autotrain App", "Open Autotrain App"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Rebuild and Open Autotrain App",
      "dependsOn": ["Rebuild Autotrain App", "Open Autotrain App with Logs"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Format Common",
      "type": "npm",
      "script": "format",
      "path": "common",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Scrapper",
      "type": "npm",
      "script": "format",
      "path": "scrapper",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Service",
      "type": "npm",
      "script": "format",
      "path": "service",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format All",
      "dependsOn": ["Format Common", "Format Scrapper", "Format Service"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
