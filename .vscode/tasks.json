{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Scrape AI Images",
      "type": "npm",
      "script": "start",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape Real Images",
      "type": "npm",
      "script": "start -- --real",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape All",
      "dependsOrder": "sequence",
      "dependsOn": ["Scrape AI Images", "Scrape Real Images"],
      "problemMatcher": []
    },
    {
      "label": "Rebuild Autotrain",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "customOptions": "--force-recreate"
        },
        "files": ["${workspaceFolder}/autotrain/compose-dev.yml"]
      },
      "presentation": {
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Attach to Autotrain",
      "type": "shell",
      "command": "docker attach --no-stdin --sig-proxy=false autotrain-app",
      "problemMatcher": []
    },
    {
      "label": "Rebuild Autotrain with Logs",
      "dependsOn": ["Rebuild Autotrain", "Attach to Autotrain"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Stop Autotrain",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/autotrain/compose-dev.yml stop",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Restart Autotrain",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/autotrain/compose-dev.yml restart",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App",
      "type": "shell",
      "command": "node ${workspaceFolder}/autotrain/launch.mjs",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App with Logs",
      "dependsOn": ["Attach to Autotrain", "Open Autotrain App"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Rebuild and Open Autotrain",
      "dependsOn": ["Rebuild Autotrain", "Open Autotrain App with Logs"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Format Common",
      "type": "npm",
      "script": "format",
      "path": "common",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Scrapper",
      "type": "npm",
      "script": "format",
      "path": "scrapper",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Service",
      "type": "npm",
      "script": "format",
      "path": "service",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format All",
      "dependsOn": ["Format Common", "Format Scrapper", "Format Service"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
