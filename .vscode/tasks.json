{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Scrape AI Images",
      "type": "npm",
      "script": "start",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape Real Images",
      "type": "npm",
      "script": "start -- --real",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape All",
      "dependsOrder": "sequence",
      "dependsOn": ["Scrape AI Images", "Scrape Real Images"],
      "problemMatcher": []
    },
    {
      "label": "Scrape Continuous",
      "type": "npm",
      "script": "loop",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Start Autotrain App",
      "type": "npm",
      "script": "start-autotrain-app",
      "path": "autotrain",
      "presentation": {
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Attach to Autotrain App",
      "type": "npm",
      "script": "attach-autotrain-app",
      "path": "autotrain",
      "problemMatcher": []
    },
    {
      "label": "Start Autotrain App with Logs",
      "type": "npm",
      "script": "start-autotrain-app-logs",
      "path": "autotrain",
      "problemMatcher": []
    },
    {
      "label": "Stop Autotrain",
      "type": "npm",
      "script": "stop-autotrain",
      "path": "autotrain",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Restart Autotrain App",
      "type": "npm",
      "script": "restart-autotrain-app",
      "path": "autotrain",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App",
      "type": "npm",
      "script": "open-autotrain-app",
      "path": "autotrain",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Recreate Autotrain CLI",
      "type": "npm",
      "script": "recreate-autotrain-cli",
      "path": "autotrain",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain CLI",
      "type": "npm",
      "script": "open-autotrain-cli",
      "path": "autotrain",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Autotrain CLI",
      "type": "npm",
      "script": "run-autotrain-cli -- ${input:autotrain-model}",
      "path": "autotrain",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Clean Autotrain CLI",
      "type": "npm",
      "script": "run-clean-autotrain-cli -- ${input:autotrain-model}",
      "path": "autotrain",
      "options": {
        "cwd": "${workspaceFolder}/autotrain"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain App with Logs",
      "type": "npm",
      "script": "open-autotrain-app-logs",
      "path": "autotrain",
      "problemMatcher": []
    },
    {
      "label": "Start and Open Autotrain App with Logs",
      "type": "npm",
      "script": "start-autotrain-app-logs",
      "path": "autotrain",
      "problemMatcher": []
    },
    {
      "label": "Format Common",
      "type": "npm",
      "script": "format",
      "path": "common",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Scrapper",
      "type": "npm",
      "script": "format",
      "path": "scrapper",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Service",
      "type": "npm",
      "script": "format",
      "path": "service",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Autotrain",
      "type": "npm",
      "script": "format",
      "path": "autotrain",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Infra",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/infra" },
      "command": "terraform fmt -recursive",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Format All",
      "dependsOn": [
        "Format Common",
        "Format Scrapper",
        "Format Service",
        "Format Autotrain",
        "Format Infra"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Start Azurite",
      "type": "npm",
      "script": "start-azurite",
      "path": "service",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": { "regexp": "" },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "service is starting at http://127.0.0.1",
            "endsPattern": "successfully listening at http://127.0.0.1"
          }
        }
      ]
    },
    {
      "label": "Start Azure Function",
      "type": "func",
      "command": "start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": ["Start Azurite"],
      "options": { "cwd": "${workspaceFolder}/service" }
    },
    {
      "label": "Restore Service Deps",
      "type": "shell",
      "command": "npm install",
      "options": { "cwd": "${workspaceFolder}/service" }
    },
    {
      "label": "Prune Service Deps",
      "type": "shell",
      "command": "npm prune --omit=dev",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}/service" }
    }
  ],
  "inputs": [
    {
      "id": "autotrain-model",
      "description": "The base model for training",
      "type": "promptString"
    }
  ]
}
