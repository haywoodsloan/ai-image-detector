{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Scrape AI Images",
      "type": "npm",
      "script": "start",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape Real Images",
      "type": "npm",
      "script": "start -- --real",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape All",
      "dependsOrder": "sequence",
      "dependsOn": ["Scrape AI Images", "Scrape Real Images"],
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Autotrain",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": false,
          "build": true,
          "customOptions": "--force-recreate"
        },
        "files": ["${workspaceFolder}/autotrain/compose-dev.yml"]
      },
      "problemMatcher": []
    },
    {
      "label": "Launch Browser",
      "hide": true,
      "type": "shell",
      "command": "node ${workspaceFolder}/autotrain/launch.mjs",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "panel": "shared",
        "clear": true,
        "showReuseMessage": false,
        "close": true
      }
    },
    {
      "label": "Open Autotrain UI",
      "dependsOn": ["Docker Compose Autotrain", "Launch Browser"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
