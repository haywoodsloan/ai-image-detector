{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Scrape AI Images",
      "type": "npm",
      "script": "start",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape Real Images",
      "type": "npm",
      "script": "start -- --real",
      "path": "scrapper",
      "problemMatcher": []
    },
    {
      "label": "Scrape All",
      "dependsOrder": "sequence",
      "dependsOn": ["Scrape AI Images", "Scrape Real Images"],
      "problemMatcher": []
    },
    {
      "label": "Rebuild Autotrain",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": false,
          "build": true,
          "customOptions": "--force-recreate"
        },
        "files": ["${workspaceFolder}/autotrain/compose-dev.yml"]
      },
      "hide": true,
      "problemMatcher": []
    },
    {
      "label": "Stop Autotrain",
      "type": "shell",
      "command": "docker compose -f ${workspaceFolder}/autotrain/compose-dev.yml stop",
      "presentation": { "reveal": "silent" },
      "problemMatcher": []
    },
    {
      "label": "Launch Browser",
      "type": "shell",
      "command": "node ${workspaceFolder}/autotrain/launch.mjs",
      "presentation": { "reveal": "silent" },
      "hide": true,
      "problemMatcher": []
    },
    {
      "label": "Open Autotrain UI",
      "dependsOn": ["Rebuild Autotrain", "Launch Browser"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Format Common",
      "type": "npm",
      "script": "format",
      "path": "common",
      "presentation": { "reveal": "silent" },
      "problemMatcher": []
    },
    {
      "label": "Format Scrapper",
      "type": "npm",
      "script": "format",
      "path": "scrapper",
      "presentation": { "reveal": "silent" },
      "problemMatcher": []
    },
    {
      "label": "Format Service",
      "type": "npm",
      "script": "format",
      "path": "service",
      "presentation": { "reveal": "silent" },
      "problemMatcher": []
    },
    {
      "label": "Format All",
      "dependsOn": ["Format Common", "Format Scrapper", "Format Service"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
