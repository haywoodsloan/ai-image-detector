task: image_classification
base_model: {{model}}
project_name: autotrain-ai-image-detect-{{datetime}}
log: tensorboard
backend: local

data:
  path: haywoodsloan/ai-images
  train_split: train
  valid_split: test
  column_mapping:
    image_column: image
    target_column: label

params:
  epochs: 1
  seed: {{randSeed}}
  batch_size: 12
  auto_find_batch_size: true
  lr: 4e-5
  optimizer: adamw_torch
  scheduler: cosine
  warmup_ratio: 0
  weight_decay: 1e-3
  gradient_accumulation: 1
  mixed_precision: bf16
  eval_strategy: 1000
  save_total_limit: 10

hub:
  username: ${HF_USERNAME}
  token: ${HF_TOKEN}
  push_to_hub: true
